meta {
  name: 15 - AI Annual Obligations - Personalized
  type: http
  seq: 15
}

get {
  url: {{baseUrl}}/ai/legal/annual-obligations/{{currentYear}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{jwtToken}}
}

tests {
