meta {
  name: Get Form Guidance - Modelo 036 Alta Hacienda
  type: http
  seq: 19
}

post {
  url: {{baseUrl}}/ai/legal/form-guidance
  body: json
  auth: inherit
}

body:json {
  {
    "FormType": "036",
    "Quarter": "Q1",
    "Year": 2025,
    "RegimeType": "general",
    "ActivityCode": "6201",
    "UserId": "{{userId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should provide Modelo 036 guidance", function() {
    const responseJson = res.getBody();
    expect(responseJson.formType).to.equal("036");
    expect(responseJson.success).to.be.true;
    expect(responseJson.instructions).to.contain("alta");
    expect(responseJson.requiredDocuments).to.be.an('array');
  });
}
