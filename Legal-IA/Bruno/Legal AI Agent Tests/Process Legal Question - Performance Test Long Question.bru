meta {
  name: Process Legal Question - Performance Test Long Question
  type: http
  seq: 21
}

post {
  url: {{baseUrl}}/ai/legal/question
  body: json
  auth: inherit
}

body:json {
  {
    "Question": "Soy autónomo desde enero 2025, mi actividad principal es desarrollo de software (código CNAE 6201), facturo aproximadamente €8.000 mensuales, tengo gastos de oficina por €1.200 mensuales, gastos de formación por €500 trimestrales, y gastos de material informático por €2.000 anuales. Estoy en régimen general de IVA y IRPF. Tengo que presentar el modelo 303 del segundo trimestre, el modelo 130, y además quiero saber si debo presentar el modelo 347 al final del año. También necesito información sobre las deducciones aplicables a mi actividad y si puedo aplicar la tarifa plana de autónomos. ¿Puedes explicarme paso a paso todas mis obligaciones fiscales y cómo optimizar mi carga tributaria?",
    "UserId": "{{userId}}",
    "SessionId": "{{sessionId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should handle complex long questions", function() {
    const responseJson = res.getBody();
    expect(responseJson.answer).to.be.a('string');
    expect(responseJson.success).to.be.true;
    expect(responseJson.answer.length).to.be.greaterThan(500);
    expect(responseJson.answer).to.contain("303");
    expect(responseJson.answer).to.contain("130");
  });
  
  test("Response time should be reasonable", function() {
    expect(res.getResponseTime()).to.be.below(60000); // Less than 60 seconds
  });
}
