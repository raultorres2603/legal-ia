meta {
  name: Process Legal Question - Generic
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/ai/legal/question
  body: json
  auth: none
}

body:json {
  {
    "question": "¿Cuáles son los plazos para presentar el modelo 303 de IVA?",
    "sessionId": "{{sessionId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should contain answer", function() {
    const responseJson = res.getBody();
    expect(responseJson.answer).to.be.a('string');
    expect(responseJson.success).to.be.true;
  });
}
