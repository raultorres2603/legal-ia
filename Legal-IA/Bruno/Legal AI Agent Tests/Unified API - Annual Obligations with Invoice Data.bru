meta {
  name: Unified API - Annual Obligations with Invoice Data
  type: http
  seq: 22
}

post {
  url: {{baseUrl}}/ai/legal/question
  body: json
  auth: inherit
}

body:json {
  {
    "question": "Considerando todos mis ingresos de este año, ¿qué declaraciones anuales debo presentar?",
    "queryType": "annual-obligations",
    "year": 2024,
    "includeUserContext": true,
    "includeInvoiceData": true
  }
}

tests {
  test("Should provide personalized annual obligations", function() {
    expect(res.getStatus()).to.equal(200);
    const responseJson = res.getBody();
    expect(responseJson.success).to.equal(true);
    expect(responseJson.queryType).to.equal("annual-obligations");
    expect(responseJson.year).to.equal(2024);
    expect(responseJson.userContextIncluded).to.equal(true);
  });
  
  test("Should include comprehensive annual guidance", function() {
    const responseJson = res.getBody();
    expect(responseJson.obligations).to.be.a('string');
    expect(responseJson.answer).to.be.a('string');
    
    // Should mention key annual obligations
    const obligations = responseJson.obligations.toLowerCase();
    expect(obligations).to.match(/modelo 100|declaración de la renta|modelo 390/);
  });
}
