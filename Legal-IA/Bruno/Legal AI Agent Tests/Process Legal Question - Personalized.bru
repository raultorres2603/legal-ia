meta {
  name: Process Legal Question - Personalized
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/ai/legal/question
  body: json
  auth: inherit
}

body:json {
  {
    "Question": "¿Cuánto IVA debo declarar este trimestre según mis ingresos actuales?",
    "UserId": "{{userId}}",
    "SessionId": "{{sessionId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should be personalized", function() {
    const responseJson = res.getBody();
    expect(responseJson.answer).to.be.a('string');
    expect(responseJson.success).to.be.true;
    expect(responseJson.answer).to.not.contain("consulte con un profesional");
  });
}
