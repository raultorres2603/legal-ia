meta {
  name: Get Form Guidance - Modelo 303 Personalized
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/ai/legal/form-guidance
  body: json
  auth: inherit
}

body:json {
  {
    "FormType": "303",
    "Quarter": "Q2",
    "Year": 2025,
    "RegimeType": "general",
    "ActivityCode": "6201",
    "UserId": "{{userId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should contain personalized form guidance", function() {
    const responseJson = res.getBody();
    expect(responseJson.formType).to.equal("303");
    expect(responseJson.success).to.be.true;
    expect(responseJson.instructions).to.be.a('string');
    expect(responseJson.calculationGuidance).to.be.a('string');
  });
}
