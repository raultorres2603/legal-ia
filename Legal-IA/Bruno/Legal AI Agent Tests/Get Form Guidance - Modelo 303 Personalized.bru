meta {
  name: Get Form Guidance - Modelo 303 Personalized
  type: http
  seq: 8
}

post {
  url: {{baseUrl}}/ai/legal/question
  body: json
  auth: inherit
}

body:json {
  {
    "question": "¿Cómo debo completar el modelo 303 con mis datos fiscales actuales?",
    "queryType": "form-guidance",
    "formType": "modelo-303",
    "quarter": 3,
    "year": 2024,
    "includeUserContext": true,
    "includeInvoiceData": true
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should provide form guidance with user context", function() {
    const responseJson = res.getBody();
    expect(responseJson.success).to.equal(true);
    expect(responseJson.queryType).to.equal("form-guidance");
    expect(responseJson.formType).to.equal("modelo-303");
    expect(responseJson.userContextIncluded).to.equal(true);
  });
  
  test("Response should include form guidance", function() {
    const responseJson = res.getBody();
    expect(responseJson.formGuidance).to.be.a('string');
    expect(responseJson.answer).to.be.a('string');
    expect(responseJson.formGuidance.length).to.be.greaterThan(100);
  });
}
