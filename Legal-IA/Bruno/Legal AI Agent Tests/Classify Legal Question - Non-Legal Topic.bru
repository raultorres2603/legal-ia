meta {
  name: Classify Legal Question - Non-Legal Topic
  type: http
  seq: 12
}

post {
  url: {{baseUrl}}/api/ai/legal/classify
  body: json
  auth: none
}

body:json {
  {
    "question": "¿Cuál es el mejor restaurante de Madrid?"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should classify as non-legal question", function() {
    const responseJson = res.getBody();
    expect(responseJson.isLegalQuestion).to.be.false;
    expect(responseJson.question).to.be.a('string');
  });
}
