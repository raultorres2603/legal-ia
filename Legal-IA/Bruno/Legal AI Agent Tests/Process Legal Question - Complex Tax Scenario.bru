meta {
  name: Process Legal Question - Complex Tax Scenario
  type: http
  seq: 15
}

post {
  url: {{baseUrl}}/ai/legal/question
  body: json
  auth: inherit
}

body:json {
  {
    "question": "Soy autónomo en régimen general, facturo €50.000 anuales, tengo gastos deducibles de €15.000, y mi actividad es consultoría informática. ¿Qué obligaciones fiscales tengo para el tercer trimestre y cómo calculo el pago fraccionado del IRPF?",
    "userId": "{{userId}}",
    "sessionId": "{{sessionId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should handle complex legal scenario", function() {
    const responseJson = res.getBody();
    expect(responseJson.answer).to.be.a('string');
    expect(responseJson.success).to.be.true;
    expect(responseJson.answer).to.contain("IRPF");
    expect(responseJson.answer).to.contain("trimestre");
    expect(responseJson.answer.length).to.be.greaterThan(200);
  });
}
