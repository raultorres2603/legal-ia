meta {
  name: Process Legal Question - Empty Body
  type: http
  seq: 13
}

post {
  url: {{baseUrl}}/api/ai/legal/question
  body: json
  auth: none
}

body:json {
  {
    "question": "",
    "sessionId": "{{sessionId}}"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should handle empty question gracefully", function() {
    const responseJson = res.getBody();
    expect(responseJson.answer).to.contain("formule su consulta legal");
    expect(responseJson.success).to.be.true;
    expect(responseJson.isLegalQuestion).to.be.false;
  });
}
