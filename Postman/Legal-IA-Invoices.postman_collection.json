{
  "info": {
    "name": "Legal-IA Invoices & InvoiceItems",
    "description": "Test all Invoice and InvoiceItem endpoints for Legal-IA.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Invoices",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" }
        ],
        "url": { "raw": "{{baseUrl}}/invoices", "host": ["{{baseUrl}}"], "path": ["invoices"] }
      },
      "response": []
    },
    {
      "name": "Get Invoice By Id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" }
        ],
        "url": { "raw": "{{baseUrl}}/invoices/{{invoiceId}}", "host": ["{{baseUrl}}"], "path": ["invoices", "{{invoiceId}}"] }
      },
      "response": []
    },
    {
      "name": "Create Invoice",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"invoiceNumber\": \"INV-2025-001\",\n  \"issueDate\": \"2025-08-05T00:00:00Z\",\n  \"clientName\": \"Juan Pérez\",\n  \"clientNIF\": \"12345678Z\",\n  \"clientAddress\": \"Calle Mayor 1, Madrid\",\n  \"subtotal\": 1000.00,\n  \"VAT\": 210.00,\n  \"IRPF\": 150.00,\n  \"total\": 1060.00,\n  \"notes\": \"Professional services\",\n  \"items\": []\n}"
        },
        "url": { "raw": "{{baseUrl}}/invoices", "host": ["{{baseUrl}}"], "path": ["invoices"] }
      },
      "response": []
    },
    {
      "name": "Update Invoice",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{invoiceId}}\",\n  \"invoiceNumber\": \"INV-2025-001\",\n  \"issueDate\": \"2025-08-05T00:00:00Z\",\n  \"clientName\": \"Juan Pérez\",\n  \"clientNIF\": \"12345678Z\",\n  \"clientAddress\": \"Calle Mayor 1, Madrid\",\n  \"subtotal\": 1000.00,\n  \"VAT\": 210.00,\n  \"IRPF\": 150.00,\n  \"total\": 1060.00,\n  \"notes\": \"Updated notes\",\n  \"items\": []\n}"
        },
        "url": { "raw": "{{baseUrl}}/invoices/{{invoiceId}}", "host": ["{{baseUrl}}"], "path": ["invoices", "{{invoiceId}}"] }
      },
      "response": []
    },
    {
      "name": "Delete Invoice",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" }
        ],
        "url": { "raw": "{{baseUrl}}/invoices/{{invoiceId}}", "host": ["{{baseUrl}}"], "path": ["invoices", "{{invoiceId}}"] }
      },
      "response": []
    },
    {
      "name": "Get All Invoice Items",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" }
        ],
        "url": { "raw": "{{baseUrl}}/invoice-items", "host": ["{{baseUrl}}"], "path": ["invoice-items"] }
      },
      "response": []
    },
    {
      "name": "Get Invoice Item By Id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" }
        ],
        "url": { "raw": "{{baseUrl}}/invoice-items/{{invoiceItemId}}", "host": ["{{baseUrl}}"], "path": ["invoice-items", "{{invoiceItemId}}"] }
      },
      "response": []
    },
    {
      "name": "Create Invoice Item",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"invoiceId\": \"{{invoiceId}}\",\n  \"description\": \"Consulting service\",\n  \"quantity\": 1,\n  \"unitPrice\": 1000.00,\n  \"VAT\": 210.00,\n  \"IRPF\": 150.00,\n  \"total\": 1060.00\n}"
        },
        "url": { "raw": "{{baseUrl}}/invoice-items", "host": ["{{baseUrl}}"], "path": ["invoice-items"] }
      },
      "response": []
    },
    {
      "name": "Update Invoice Item",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{invoiceItemId}}\",\n  \"invoiceId\": \"{{invoiceId}}\",\n  \"description\": \"Consulting service updated\",\n  \"quantity\": 2,\n  \"unitPrice\": 500.00,\n  \"VAT\": 210.00,\n  \"IRPF\": 150.00,\n  \"total\": 1060.00\n}"
        },
        "url": { "raw": "{{baseUrl}}/invoice-items/{{invoiceItemId}}", "host": ["{{baseUrl}}"], "path": ["invoice-items", "{{invoiceItemId}}"] }
      },
      "response": []
    },
    {
      "name": "Delete Invoice Item",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text" }
        ],
        "url": { "raw": "{{baseUrl}}/invoice-items/{{invoiceItemId}}", "host": ["{{baseUrl}}"], "path": ["invoice-items", "{{invoiceItemId}}"] }
      },
      "response": []
    }
  ]
}

